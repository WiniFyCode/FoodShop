<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="173dp"
        android:layout_height="248dp"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/banana"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="19dp"
                android:src="@drawable/carbon_favorite"
                app:layout_constraintBottom_toTopOf="@+id/imgProduct"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvNameFruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27.5dp"
                android:text="Organic Bananas"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgProduct" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="7pcs, Price :"
                android:textColor="@color/DimGray"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@+id/tvNameFruit"
                app:layout_constraintTop_toBottomOf="@+id/tvNameFruit" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_marginTop="21.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4.99"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvQuantity"
                app:layout_constraintTop_toBottomOf="@+id/tvQuantity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToCart"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/add_product_button"
                android:layout_margin="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>